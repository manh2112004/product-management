extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
    .container.my-3
        include ../../partials/list-btn-user
        .row
            .col-12
                +box-head("Lời mời kết bạn đã gửi")
        .row
            each user in users
                .col-6
                    div(class="box-user add")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar?user.avatar:"https://th.bing.com/th/id/OIP.kQyrx9VbuWXWxCVxoreXOgHaHN?o=7rm=3&rs=1&pid=ImgDetMain&o=7&rm=3")
                                alt=""
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                class="btn btn-sm btn-primary mr-1"
                                btn-add-friend=user.id
                                ) Thêm bạn bè
                                button(
                                class="btn btn-sm btn-secondary mr-1"
                                btn-cancel-friend=user.id
                                ) huỷ lời mời
block script
    script(src="/js/users.js") 