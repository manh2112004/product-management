extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        include ../../partials/list-btn-user
        .row
            .col-12
                +box-head("Chat")

        .row
            .col-12
                .chat(my-id=user.id)
                    // Header
                    //- .inner-head
                    //-     .inner-avatar EY
                    //-     .inner-name Em Yêu
                    .inner-body
                        each chat in chats
                            div(class=(chat.user_id==user.id?"inner-outgoing":"inner-incoming"))
                                if(chat.user_id!=user.id)
                                    .inner-name= chat.infoUser.fullName
                                .inner-content
                                    | #{chat.content}
                        div(class="inner-list-typing")
                            //- div(class="box-typing")
                            //-     div(class="inner-name") Le van a
                            //-     div(class="inner-dots")
                            //-         span
                            //-         span
                            //-         span

                    .inner-foot
                        form(class="inner-form" action="")
                            input(
                                type="text"
                                placeholder="Nhập nội dung..."
                                name="content"
                            )
                            span(class="button-icon") <i class="fa-regular fa-face-smile"></i>
                            button
                                i.fa-solid.fa-paper-plane
    div(class="tooltip" role="tooltip")
        emoji-picker(class="light")