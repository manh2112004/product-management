extends ../../layouts/default.pug
include ../../mixins/showAlert.pug
block main
    +showAlert-Error(5000)
    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Nhập mã xác thực OTP
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                            value=email
                            required
                        )
                    div(class="form-group")
                        label(for="otp") mã OTP
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Xác thực
