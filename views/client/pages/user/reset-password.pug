extends ../../layouts/default.pug
include ../../mixins/showAlert.pug
block main
    +showAlert-Error(5000)
    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Đặt lại mật khẩu
                form(
                    action="/user/password/reset"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="new-password") Mật khẩu mới
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="form-group")
                        label(for="confirm-password") Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Đặt lại mật khẩu
